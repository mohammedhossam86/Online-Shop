<%- include('parts/header') %>
<%- include('parts/navbar') %>

<div class="container mt-4 shop-page">

    <!-- FILTER -->
    <form action="/" method="get" class="filter-bar mb-4">
        <div class="row g-2 align-items-center">

            <div class="col-8 col-md-4">
                <select name="category" class="form-select">

                    <!-- ALL -->
                    <option value="all"
                        <%= !query.category || query.category === 'all' ? 'selected' : '' %>>
                        All Categories
                    </option>

                    <!-- DYNAMIC CATEGORIES -->
                    <% categories.forEach(cat => { %>
                        <option
                            value="<%= cat %>"
                            <%= query.category === cat ? 'selected' : '' %>>
                            <%= cat.charAt(0).toUpperCase() + cat.slice(1) %>
                        </option>
                    <% }) %>

                </select>
            </div>

            <div class="col-4 col-md-2">
                <button class="btn btn-primary w-100">Filter</button>
            </div>

        </div>
    </form>

    <!-- PRODUCTS LIST -->
    <% if (products.length === 0) { %>
        <div class="alert alert-warning text-center">
            No products available
        </div>
    <% } else { %>

        <div class="row g-4">

            <% products.forEach(product => { %>

                <div class="col-12 col-sm-6 col-lg-4 col-xl-3">
                    <div class="card product-card h-100">

                        <!-- âœ… IMAGE FROM MONGODB -->
                        <div class="product-img-wrapper">
                            <img 
                                src="/products/<%= product._id %>/image"
                                class="card-img-top product-img"
                                alt="<%= product.name %>">
                        </div>

                        <div class="card-body d-flex flex-column">

                            <h5 class="card-title product-title">
                                <a href="/products/<%= product._id %>">
                                    <%= product.name %>
                                </a>
                            </h5>

                            <p class="product-price mt-auto">
                                $<%= product.price %>
                            </p>

                            <!-- ADD TO CART -->
                            <form action="/cart" method="POST" class="mt-2">
                                <input type="hidden" name="name" value="<%= product.name %>">
                                <input type="hidden" name="price" value="<%= product.price %>">
                                <input type="hidden" name="productId" value="<%= product._id %>">

                                <div class="input-group">
                                    <input 
                                        type="number"
                                        name="amount"
                                        class="form-control"
                                        min="1"
                                        value="1"
                                        required>

                                    <button class="btn btn-primary">
                                        Add
                                    </button>
                                </div>
                            </form>

                        </div>
                    </div>
                </div>

            <% }) %>

        </div>

    <% } %>

</div>

<%- include('parts/footer') %>